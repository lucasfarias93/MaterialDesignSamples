<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textViewStyle">@font/googlesans_regular</item>
        <item name="buttonStyle">@font/googlesans_regular</item>

        <!-- Activity transitions -->
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="TextAppearance.AppCompat.Widget.ActionBar.Title" parent="@android:style/TextAppearance">
        <item name="android:font">@font/googlesans_regular</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="Theme.MaterialComponents.MyTheme.NoActionBar" parent="Theme.MaterialComponents.Light.Bridge">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MaterialComponents.MyTheme" parent="Theme.MaterialComponents.Light.Bridge">
        <item name="colorPrimary">@color/colorLight</item>
        <item name="colorPrimaryDark">@color/colorDark</item>
        <item name="colorSecondary">@color/colorSuperLight</item>
        <item name="colorAccent">@color/colorAccentBridge</item>
        <item name="android:textViewStyle">@font/googlesans_regular</item>
        <item name="buttonStyle">@font/googlesans_regular</item>
        <item name="android:titleTextColor">@android:color/white</item>
        <item name="android:titleTextStyle">@font/googlesans_regular</item>
    </style>

    <!-- No action bar full screen style -->
    <style name="Theme.AppCompat.Lignt.NoActionBar.FullScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

</resources>
